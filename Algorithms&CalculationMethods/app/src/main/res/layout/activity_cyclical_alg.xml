<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CyclicalAlg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1_3_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Виберіть, що ви бажаєте переглянути"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="24sp"
            android:typeface="monospace"
            android:visibility="visible"
            app:fontFamily="sans-serif" />

        <Button
            android:id="@+id/blockDiagramCyclicalButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="change"
            android:text="Блок-схема"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="18sp"
            android:typeface="normal"
            android:visibility="visible" />

        <Button
            android:id="@+id/codeCyclicalButton"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="change"
            android:text="Код програми"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="18sp"
            android:typeface="normal"
            android:visibility="visible" />

        <Button
            android:id="@+id/runProgCyclicalButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="runCyclicalProgram"
            android:text="Запуск програми"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="18sp"
            android:typeface="normal"
            android:visibility="visible" />

        <fragment
            android:id="@+id/fragment"
            android:name="com.example.amolabs.Emptyfragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>