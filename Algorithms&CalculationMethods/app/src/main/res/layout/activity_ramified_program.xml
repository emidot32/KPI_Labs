<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RamifiedProgram">
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:text='Введіть число та натисніть "Порахувати"'
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="24sp"
            android:typeface="monospace"
            android:visibility="visible"
            app:fontFamily="sans-serif" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView25"
                android:layout_width="34dp"
                android:layout_height="99dp"
                android:layout_weight="1"
                android:text="   k = "
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:typeface="normal"
                app:fontFamily="sans-serif" />

            <EditText
                android:id="@+id/editTextRam1"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Будь-яке число"
                android:inputType="number|numberDecimal"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView26"
                android:layout_width="38dp"
                android:layout_height="96dp"
                android:layout_weight="1"
                android:text="   d = "
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:typeface="monospace"
                app:fontFamily="sans-serif" />

            <EditText
                android:id="@+id/editTextRam2"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Будь-яке число"
                android:inputType="number|numberDecimal"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="256dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/eq2" />

        </LinearLayout>

        <TextView
            android:id="@+id/RamifiedResult"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Результат"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="bold"
            android:typeface="monospace"
            app:fontFamily="sans-serif" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:background="@android:color/holo_red_light"
            android:onClick="calculate"
            android:text="Порахувати"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>